#include <stdio.h>
#include <string.h>

int main() {
  char name[50];
  int m1, m2, m3, m4, m5;
  float total, average;

  // Input the student's name
  scanf("%s", name);

  // Input the marks for 5 subjects
  scanf("%d", &m1);
  scanf("%d", &m2);
  scanf("%d", &m3);
  scanf("%d", &m4);
  scanf("%d", &m5);

  // Calculate the total marks
  total = m1 + m2 + m3 + m4 + m5;

  // Calculate the average marks
  average = total / 5.0;

  // Print the output
  printf("Name of the Student:%s\n", name);
  printf("Total marks:%.0f\n", total);
  printf("Average marks:%.1f\n", average);

  return 0;
}
