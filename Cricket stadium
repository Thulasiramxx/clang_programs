#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {

    int length, breadth;

    scanf("%d", &length);
    scanf("%d", &breadth);

    int rope_length = 2 * (length + breadth);
    int carpet_area = length * breadth;

    printf("%d\n", rope_length);
    printf("%d\n", carpet_area);

    return 0;
}
