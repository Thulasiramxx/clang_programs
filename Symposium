#include <stdio.h>

int main() {
    int dept_code;
    char event_code;

    printf("Welcome to AsInTra\n");
    printf("1.CSE\n");
    printf("2.ECE\n");
    printf("3.MECH\n");
    printf("4.CIVIL\n");
    printf("Enter Department\n");
    scanf("%d", &dept_code);

    switch (dept_code) {
        case 1:
            printf("Go Straight\n");
            printf("Welcome to CSE Department\n");
            printf("a.Coding\n");
            printf("b.Web Designing\n");
            printf("c.Database\n");
            printf("Enter Event\n");
            scanf(" %c", &event_code); // Note the space before %c to consume newline
            switch (event_code) {
                case 'a':
                    printf("Go to hall S108\n");
                    break;
                case 'b':
                    printf("Go to hall S208\n");
                    break;
                case 'c':
                    printf("Go to hall S206\n");
                    break;
                default:
                    printf("No Event exist\n");
            }
            break;
        case 2:
            printf("Go Right\n");
            printf("Welcome to ECE Department\n");
            printf("a.Project Expo\n");
            printf("b.PPT\n");
            printf("c.Circuit Debug\n");
            printf("Enter Event\n");
            scanf(" %c", &event_code);
            switch (event_code) {
                case 'a':
                    printf("Go to hall M108\n");
                    break;
                case 'b':
                    printf("Go to hall M208\n");
                    break;
                case 'c':
                    printf("Go to hall M206\n");
                    break;
                default:
                    printf("No Event exist\n");
            }
            break;
        case 3:
            printf("Go Left\n");
            printf("Welcome to MECH Department\n");
            printf("a.BottleRocketery\n");
            printf("b.PPT\n");
            printf("c.Mad 4 CAD\n");
            printf("Enter Event\n");
            scanf(" %c", &event_code);
            switch (event_code) {
                case 'a':
                    printf("Go to hall N108\n");
                    break;
                case 'b':
                    printf("Go to hall N208\n");
                    break;
                case 'c':
                    printf("Go to hall N206\n");
                    break;
                default:
                    printf("No Event exist\n");
            }
            break;
        case 4:
            printf("Go Straight and turn Left\n");
            printf("Welcome to CIVIL Department\n");
            printf("a.CADD Quest\n");
            printf("b.Brick Bonding\n");
            printf("c.Model Making\n");
            printf("Enter Event\n");
            scanf(" %c", &event_code);
            switch (event_code) {
                case 'a':
                    printf("Go to hall C108\n");
                    break;
                case 'b':
                    printf("Go to hall C208\n");
                    break;
                case 'c':
                    printf("Go to hall C206\n");
                    break;
                default:
                    printf("No Event exist\n");
            }
            break;
        default:
            printf("Wrong Input\n");
    }

    return 0;
}
